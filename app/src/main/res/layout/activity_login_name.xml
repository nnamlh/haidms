<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.congtyhai.dms.login.LoginNameActivity">



    <View
        android:id="@+id/login_divide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/login_divide"
        android:id="@+id/layoutinput"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_login"
        android:gravity="center">

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="@color/cardview_dark_background"
            android:background="@null"
            android:textAlignment="center"
            android:maxLines="1"
            android:id="@+id/ename"
            android:fontFamily="sans-serif-light"
            android:inputType="textNoSuggestions"
            android:textColorHint="@color/gray_color"
            android:hint="Nhập tên tài khoản"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_divide"
        android:layout_marginTop="20dp"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:onClick="loginClick"
        android:background="@drawable/button_login"/>

    <ImageView
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/layoutinput"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/splash"/>


</RelativeLayout>
