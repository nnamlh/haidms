<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.congtyhai.haidms.Agency.AgencyUpdateLocationActivity"
    tools:showIn="@layout/activity_agency_update_location">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:padding="16dp"
       android:layout_height="match_parent">

       <fragment
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:id="@+id/map"
           android:name="com.google.android.gms.maps.SupportMapFragment">
       </fragment>

       <!--  Địa chi -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textColor="#000000"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:text="Địa chỉ"
           android:textSize="14dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/cardview_dark_background"
           android:maxLines="1"
           android:enabled="false"
           android:id="@+id/eaddress"
           android:fontFamily="sans-serif-light"
           android:inputType="textNoSuggestions"/>

       <!--  Thanh pho -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textColor="#000000"
           android:visibility="gone"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:text="Quốc gia"
           android:textSize="14dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/cardview_dark_background"
           android:maxLines="1"
           android:id="@+id/ecountry"
           android:visibility="gone"
           android:enabled="false"
           android:fontFamily="sans-serif-light"
           android:inputType="textNoSuggestions"/>

       <!--  Thành phố/tỉnh -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textColor="#000000"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:text="Thành phố/tỉnh"
           android:textSize="14dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/cardview_dark_background"
           android:maxLines="1"
           android:id="@+id/eprovince"
           android:enabled="false"
           android:fontFamily="sans-serif-light"
           android:inputType="textNoSuggestions"/>

       <!--  Quận/huyện -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textColor="#000000"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:text="Quận/huyện"
           android:textSize="14dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/cardview_dark_background"
           android:maxLines="1"
           android:id="@+id/edistrict"
           android:enabled="false"
           android:fontFamily="sans-serif-light"
           android:inputType="textNoSuggestions"/>

       <!--  Quận/huyện -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-light"
           android:textColor="#000000"
           android:textStyle="bold"
           android:visibility="gone"
           android:layout_marginTop="10dp"
           android:text="Phường/xã"
           android:textSize="14dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/cardview_dark_background"
           android:maxLines="1"
           android:id="@+id/eward"
           android:visibility="gone"
           android:enabled="false"
           android:fontFamily="sans-serif-light"
           android:inputType="textNoSuggestions"/>
       
       
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:id="@+id/image"
           android:layout_marginTop="10dp"
           android:visibility="gone"/>

       <Button
           android:layout_width="300dp"
           android:layout_height="50dp"
           android:layout_marginTop="20dp"
           android:text="Chụp ảnh"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/white"
           android:textSize="18dp"
           android:onClick="takeImage"
           android:layout_marginBottom="30dp"
           android:id="@+id/btnAdd"
           style="@style/Widget.AppCompat.Button.Colored"/>

   </LinearLayout>


</android.support.v4.widget.NestedScrollView>
